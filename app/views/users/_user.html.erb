<table>
  <thead>
    <tr>
      <th>写真</th>
      <th>背番号</th>
      <th>名前</th>
      <th>誕生日</th>
      <th>前所属</th>
    </tr>
  </thead>
  <tbody>
    <% User.all.each do |u| %>
    <tr>
      <th><%= image_tag u.photo , :width => '100', :height => '150' %></th>
      <th><%= u.number %></th>
      <th><%= u.name %></th>
      <th><%= u.birthday %></th>
      <th><%= u.belong %></th>
    </tr>
    <% end %>
  </tbody>
</table>