<div class="container">
  <div class="row">
    <div class="col-9">
      <table class="gamedatas">
  <thead>
    <tr>
      <th>日付</th>
      <th>タイトル</th>
      <th>対戦相手</th>
      <th>結果</th>
      <th>　　</th>
    </tr>
  </thead>
  <tbody class="gamedatas">
    <% @gamedatas.each do |d| %>
    <tr>
      <td>
        <% if d.created_at > Date.parse(GameResult.last.created_at.to_s) && GameResult.last.created_at >Date.today-7%>
              <%= image_tag "new.gif"%>
            <% end %>
        <%=  u=d.gamedate.to_s.gsub('-','/')  %>
        </td>
      <td>
        <div class = 'result'>
          <%= d.gametitle  %>
        </div>
      </td>
      <td><%= d.gameopponent %></td>
      <td><%= d.gamepoint %></td>
      <td><%= link_to "詳細", result_path(d) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @gamedatas %>
    </div>
      <div class="col-3 log">
        <%= render 'shared/sidebar' %>  
      </div>
  </div>
</div>

  