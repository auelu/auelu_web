<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>内容</th>
    </tr>
  </thead>
  <tbody>
    <% Schedule.order("date").each do |s| %>
      <%if s.date >= Date.today %>
        <tr>
          <% d=s.date.to_s.gsub('-','/')  #変更可 2020-8-12->2020/8/12%> 
          <th><%= d %></th>
          <th><%= s.content %></th>
       </tr>
      <% end %>
    <% end %>
  </tbody>
</table>